<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Magnet</title>

  <%- include ('../layout/css') -%>

</head>

<body id="page-top">
  <%- include ('layout/header') -%>
    <div class="container">

      <form action="" method="post">
        <input type="hidden" name="user_id" value="<%= data._id%>">

        <div class="form-group">
          <label for="upi_id">UPI Id<span class="mandatorySymbol">*</span></label>
          <input type="text" class="form-control" id="upi_id" name="upi_id" placeholder="Enter UPI Id" required>
        </div>


        <div class="photoUpload mt-3" id="cover_frame">
          <div class="form-group cover_photo">
            <label class="uploadCover" for="upi_image"><i class="fa fa-camera"></i> Upload UPI Image</label>

            <input type="file" class="form-control" style="visibility:hidden;" onchange="readURL(this);" id="upi_image"
              name="upi_image">
          </div>
        </div>
        <button type="submit" class="btn saveBtn">SAVE</button>
        <button type="reset" class="btn resetBtn"><i class="fa fa-undo" aria-hidden="true"></i> Reset</button>
      </form>
    </div>
    <%- include ('layout/footer') -%>
      <%- include ('../layout/js') -%>
        <script>

          function readURL(input) {
            if (input.files && input.files[0]) {
              var reader = new FileReader();

              reader.onload = function (e) {
                $('#cover_frame')
                  .css("background-image", "url(" + e.target.result + ")")
                  .css("background-size", "cover")
                  .css("background-repeat", "no-repeat")
                  .css("background-position", "center");
              };

              reader.readAsDataURL(input.files[0]);
            }
          }
        </script>
</body>

</html>