    <div class="container">

      <form action="/user/save_contact_details" method="post">
        <input type="hidden" name="user_id" value="<%= data._id%>">
        <div class="form-group">
          <label for="mobile_number">Mobile Number<span class="mandatorySymbol">*</span></label>
          <input type="text" class="form-control" id="mobile_number" name="mobile_number"
            placeholder="Enter Your 10 digit mobile number" pattern="[6789][0-9]{9}" required>
        </div>
        <div class="form-group">
          <label for="whatsapp_number">Whatsapp Number<span class="mandatorySymbol">*</span></label>
          <input type="text" class="form-control" id="whatsapp_number" name="whatsapp_number"
            placeholder="Enter Your whatsapp number" pattern="[6789][0-9]{9}" required>
        </div>
        <div class="form-group">
          <label for="email">Email address<span class="mandatorySymbol">*</span></label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter Your Email address here"
            required>
        </div>
        <div class="form-group">
          <label for="website">Website<span class="mandatorySymbol">*</span></label>
          <input type="text" class="form-control" id="website" name="website"
            placeholder="Enter Your Website URL Example (www.com)" required>
        </div>
        <div class="form-group">
          <label for="telegram">Telegram<span class="mandatorySymbol">*</span></label>
          <input type="text" class="form-control" id="telegram" name="telegram"
            placeholder="Enter Your telegram username" required>
        </div>
        <div class="form-group">
          <label for="address">Address<span class="mandatorySymbol">*</span></label>
          <input type="text" class="form-control" id="address" name="address1" placeholder="Line 1">
          <input type="text" class="form-control mt-3" id="address" name="address2" placeholder="Line 2">


          <div class="clearfix"></div>

          <div class="w100 mt-3">
                <div class="lDiv w45">
                  <div class="form-group">
                    <input type="text" class="form-control" id="address" name="pincode" placeholder="Pincode" pattern="[0-9]{6}" required="">
                  </div>
                </div>
                <div class="rDiv w45">
                  <div class="form-group">
                    <input type="text" class="form-control" id="address" name="city" placeholder="City" pattern="[0-9]{6}" required="">
                  </div>
                </div>
          </div> 
          <div class="clearfix"></div>

          <div class="w100 mt-2">
                <div class="lDiv w45">
                  <div class="form-group">
                    <input type="text" class="form-control" id="address" name="state" placeholder="State" required="">
                  </div>
                </div>
                <div class="rDiv w45">
                  <div class="form-group">
                    <input type="text" class="form-control" id="address" name="country" placeholder="Country" required="">
                  </div>
                </div>
          </div> 
          
